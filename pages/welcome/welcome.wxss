page {
  height: 100%;
  background-color: #b3d4db;  
}
.container {
  display: flex;
  flex-direction: column;
  align-items: center;

}
.user-avatar {
  width: 200rpx;
  height: 200rpx;
  margin-top: 160rpx;
  border-radius: 50%;
}
.user-name {
  margin-top: 80rpx;
  font-size: 32rpx;
  font-family: MicroSoft Yahei;
  font-weight: bold;
}

.moto {
  font-size: 22rpx;
  font-family: MicroSoft Yahei;
  font-weight: bold;
  line-height: 80rpx;
  color: #405f80;
}

.moto-container {
  margin-top: 80rpx;
  border: 1px solid #405f80;
  width: 200rpx;
  height: 80rpx;
  border-radius: 5px;
  text-align: center;
}